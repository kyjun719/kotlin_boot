<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".joyce.ui.fragment.SelectionFragment">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guide_layout"
        app:layout_constraintGuide_percent="0.85"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="4"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guide_layout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/option1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/option1"
            android:gravity="center"
            android:background="@drawable/rect_selection"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/option2"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/option2"
            android:gravity="center"
            android:background="@drawable/rect_selection"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/option3"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/option3"
            android:gravity="center"
            android:background="@drawable/rect_selection"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/option4"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/option4"
            android:gravity="center"
            android:background="@drawable/rect_selection"
            />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:theme="@style/CustomFloatingTheme"
        android:layout_marginLeft="16dp"
        android:id="@+id/btn_prev"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>